#!/bin/sh

. config/options

NOGET="gdb termcap"

if [ -z "$1" ]; then
  for i in $PACKAGES/*; do
    GET=yes
    for j in $NOGET; do
      [ ${i##*/} = $j ] && GET=no break
    done
    if [ $GET = yes ]; then
      $SCRIPTS/get ${i#$PACKAGES}
    fi
  done
  exit 0
fi

mkdir -p .stamps/$1

if [ -f $PACKAGES/$1/url ]; then
  [ -f .stamps/$1/get -a ! .stamps/$1/get -ot $PACKAGES/$1/url ] && exit 0

  rm -f .stamps/$1/get
  for i in `ls $SOURCES/$1`; do
    grep -q "/$i\$" $PACKAGES/$1/url || rm -f $SOURCES/$1/$i
  done

  $SCRIPTS/checkdeps get

  printf "%${INDENT}c GET      $1\n" >&$SILENT_OUT
  export INDENT=$((${INDENT:-1}+$INDENT_SIZE))

  [ "$VERBOSE" != yes ] && WGET_OPT=-q

  mkdir -p $SOURCES/$1
  for i in `sed s%GEEXBOX_SRCS%$GEEXBOX_SRCS% $PACKAGES/$1/url`; do
    wget --passive-ftp -c $WGET_OPT -P $SOURCES/$1 $i
  done

  cp -p $PACKAGES/$1/url .stamps/$1/get
  rm -f .stamps/$1/unpack
  rm -f .stamps/$1/build
  rm -f .stamps/$1/install
fi
