#!/bin/sh

. config/options

clean ()
{
  echo " CLEAN    $1" >&$SILENT_OUT

  rm -rf $BUILD/$1*
  if [ "$FULL" = true ]; then
    rm -rf .stamps/$1
    rm -rf $SOURCES/$1
  else
    rm -f .stamps/$1/unpack
    rm -f .stamps/$1/build
    rm -f .stamps/$1/install
  fi
}

if [ "$1" = "--full" ]; then
  FULL=true
  shift
fi

if [ "$1" = "" ]; then
  for i in $PACKAGES/*; do clean ${i#$PACKAGES/}; done
  rm -rf $BUILD/iso
  rm -rf $BUILD/ziso
  rm -f $ISO
  [ "$FULL" = true ] && rm -rf $CCACHE_DIR
else
  clean $1
fi

exit 0
