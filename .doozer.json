{
  "concurrent": false,
  "targets": {
    "geexbox-kodi-i386-generic": {
      "buildenv": "trusty-amd64",
      "builddeps": [
        "git",
        "build-essential",
        "pkg-config",
        "gettext",
        "libssl-dev",
        "zlib1g-dev",
        "wget",
        "bzip2",
        "git-core",
        "python",
        "tar", 
        "gzip",
        "coreutils",
        "sed", 
        "patch",
        "coreutils",
        "gcc",
        "g++",
        "gawk",
        "perl",
        "flex",
        "bison",
        "cpio",
        "texinfo",
        "gettext",
        "diffutils",
        "lzma",
        "libtool",
        "subversion",
        "unzip",
        "zip",
        "libncurses5-dev",
        "libreadline6-dev",
        "docbook-xsl",
        "bc",
        "openjdk-7-jre-headless"
      ],
      "buildcmd": [
        "mkdir -p /project/sources /project/stamps /project/build.host/.cache build/build.host",
	"ln -s /project/sources sources",
	"ln -s /project/stamps .stamps",
	"cp -r /project/build.host/ build/",
	"ls -al build/build.host/.cache",
	"ls -al /project/sources",
        "./scripts/loadcfg ${TARGET}",
        "make"
      ]
    }
  }
}    