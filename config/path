GEEXBOX_VERSION=`cat VERSION`
CONFIG=config
SCRIPTS=scripts
PACKAGES=packages
SOURCES=sources
BUILD=build
DOCS=DOCS
GENERATOR=generator
INSTALLATOR=installator
ROOT=`pwd`

GEEXBOX_SRCS=http://www.geexbox.org/src/$GEEXBOX_VERSION
[ "$GEEXBOX_VERSION" = cvs ] && GEEXBOX_VERSION=cvs-`date +%Y%m%d`
ISO=geexbox-$GEEXBOX_VERSION
GENERATOR_NAME=geexbox-generator-$GEEXBOX_VERSION
INSTALLATOR_NAME=geexbox-installator-$GEEXBOX_VERSION
PXE_NAME=geexbox-pxe

# Avoid ccache<->uClibc-gcc infinite loop when the uClibc $BUILD/usr/bin is
# in $PATH.  Set this to where your _system_ gcc and friends are installed.
# Only applies if you have a "symlinked" ccache setup, but should not hurt
# anywhere.
[ -z "$CCACHE_PATH" ] && export CCACHE_PATH=/usr/local/bin:/usr/bin
