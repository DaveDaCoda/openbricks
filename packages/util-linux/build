#!/bin/sh

. config/options

$SCRIPTS/build toolchain || exit 1
$SCRIPTS/build ncurses || exit 1

CWD=`pwd`
export CC=$TARGET_CC
export CFLAGS="-Os -I`ls -d $ROOT/$BUILD/ncurses*/include`" 
export LDFLAGS="-s -L`ls -d $ROOT/$BUILD/ncurses*/lib`"

cd $BUILD/util-linux* && \
./configure && \
make -C fdisk sfdisk && \
make -C fdisk cfdisk CFLAGS="-include ../defines.h -I../lib $CFLAGS" && \
cd "$CWD" && \
exit 0

cd "$CWD"
exit 1
