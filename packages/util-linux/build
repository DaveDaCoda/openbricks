#!/bin/sh

. config/options toolchain

$SCRIPTS/build toolchain || exit 1
$SCRIPTS/build ncurses || exit 1

CWD=`pwd`
CFLAGS="$CFLAGS -I`ls -d $ROOT/$BUILD/ncurses*/include`" 
LDFLAGS="$LDFLAGS -L`ls -d $ROOT/$BUILD/ncurses*/lib`"

cd $BUILD/util-linux* && \
./configure && \
make -C fdisk sfdisk && \
make -C fdisk cfdisk CFLAGS="-include ../defines.h -I../lib $CFLAGS" && \
cd "$CWD" && \
exit 0

cd "$CWD"
exit 1
