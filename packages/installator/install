#!/bin/sh

. config/options

mkdir -p $INSTALL/sbin
cp $INSTALLATOR/installator.sh $INSTALL/sbin/installator || exit 1
sed -i "s/VERSION=.*/VERSION=$GEEXBOX_VERSION/" $INSTALL/sbin/installator
$SCRIPTS/install ncurses || exit 1
$SCRIPTS/install dialog || exit 1
$SCRIPTS/install util-linux || exit 1
$SCRIPTS/install dosfstools || exit 1
$SCRIPTS/install syslinux binary || exit 1
