#!/bin/sh

. config/options

mkdir -p $INSTALL/sbin
sed "s/VERSION=.*/VERSION=$GEEXBOX_VERSION/" $PACKAGES/installator/scripts/installator.sh > $INSTALL/sbin/installator
$SCRIPTS/install ncurses
$SCRIPTS/install dialog
$SCRIPTS/install util-linux
$SCRIPTS/install dosfstools
$SCRIPTS/install e2fsprogs
$SCRIPTS/install grub
$SCRIPTS/install syslinux binary
