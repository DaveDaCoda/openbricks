#!/bin/sh

. config/options

mkdir -p $INSTALL/sbin
cp $PACKAGES/installator/scripts/installator.sh $INSTALL/sbin/installator
sed -i "s/VERSION=.*/VERSION=$GEEXBOX_VERSION/" $INSTALL/sbin/installator
$SCRIPTS/install ncurses
$SCRIPTS/install dialog
$SCRIPTS/install util-linux
$SCRIPTS/install dosfstools
$SCRIPTS/install grub $2
$SCRIPTS/install syslinux binary
