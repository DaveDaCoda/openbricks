#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build libogg

CFLAGS="$CFLAGS -ffast-math -D_ISOC99_SOURCE -D__USE_EXTERN_INLINES"

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --disable-shared \
            --disable-oggtest
make
make install
