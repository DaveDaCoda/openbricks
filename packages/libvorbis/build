#!/bin/sh

. config/options

$SCRIPTS/build toolchain || exit 1
$SCRIPTS/build libogg || exit 1

CWD=`pwd`
CFLAGS="$CFLAGS -ffast-math"

cd $BUILD/libvorbis* && \
HAVE_PKG_CONFIG="no" \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --disable-shared \
            --with-ogg-libraries="`ls -d $ROOT/$BUILD/libogg*/src` -L`ls -d $ROOT/$BUILD/libogg*/src/.libs`" \
            --with-ogg-includes=`ls -d $ROOT/$BUILD/libogg*/include` \
            --disable-oggtest && \
make && \
cd "$CWD" && \
exit 0

cd "$CWD"
exit 1
