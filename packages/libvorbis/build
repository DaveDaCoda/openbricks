#!/bin/sh

. config/options

$SCRIPTS/build toolchain || exit 1
$SCRIPTS/build libogg || exit 1

unset INSTALL
CFLAGS="$CFLAGS -ffast-math"

cd $BUILD/libvorbis* && \
HAVE_PKG_CONFIG="no" \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --disable-shared \
            --disable-oggtest && \
make && \
make install && \
exit 0

exit 1
