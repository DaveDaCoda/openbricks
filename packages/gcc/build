#!/bin/sh

. config/options

$SCRIPTS/install ccache || exit 1
$SCRIPTS/install binutils || exit 1
$SCRIPTS/unpack uClibc || exit 1
if [ ! -e $TOOLCHAIN/$TARGET_NAME/include ]; then
  ln -s $ROOT/$BUILD/uClibc*/include $TOOLCHAIN/$TARGET_NAME/include
fi

setup_toolchain host
unset INSTALL

cd $BUILD/gcc* && \
./configure --target=$TARGET_NAME \
            --prefix=$ROOT/$TOOLCHAIN \
            --enable-languages=c \
            --disable-shared \
            --disable-nls && \
make && \
exit 0

exit 1
