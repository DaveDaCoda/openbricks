#!/bin/sh

. config/options

$SCRIPTS/install ccache
$SCRIPTS/install binutils
$SCRIPTS/unpack uClibc

setup_toolchain host

cd $BUILD/gcc*
mkdir -p objdir
cd objdir
../configure --host=$HOST_NAME \
             --build=$HOST_NAME \
             --target=$TARGET_NAME \
             --prefix=$ROOT/$TOOLCHAIN \
             --with-sysroot=$SYSROOT_PREFIX \
             --with-local-prefix=/usr/local \
             --enable-languages=c \
             --disable-shared \
             --disable-nls
make
