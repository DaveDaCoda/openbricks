#!/bin/sh

. config/options

$SCRIPTS/install ccache
$SCRIPTS/install binutils
$SCRIPTS/unpack uClibc

setup_toolchain host

cd $BUILD/gcc*
./configure --host=$HOST_NAME \
            --build=$HOST_NAME \
            --target=$TARGET_NAME \
            --prefix=$ROOT/$TOOLCHAIN \
            --with-sysroot=$SYSROOT_PREFIX \
            --with-local-prefix=$LIB_PREFIX \
            --enable-languages=c \
            --disable-shared \
            --disable-nls
make
