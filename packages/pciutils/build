#!/bin/sh

. config/path

$SCRIPTS/build uClibc || exit 1


export UCLIBC_GCC_DLOPT="-Wl,--dynamic-linker,/lib/ld-uClibc.so.0"
CWD=`pwd`

cd "`ls -d $BUILD/pciutils-*/lib`" && \
./configure && \
make CC="`ls $ROOT/$BUILD/uClibc-*/build/usr/bin/gcc`" CFLAGS="-Os" && \
cd .. && \
ln -sf lib pci && \
cd "$CWD" && \
exit 0

cd "$CWD"
exit 1
