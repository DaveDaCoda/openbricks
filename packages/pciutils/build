#!/bin/sh

. config/options

$SCRIPTS/build toolchain || exit 1

CWD=`pwd`
export CC=$TARGET_CC
export CFLAGS="-Os"

cd $BUILD/pciutils*/lib && \
sed -i "s/sys=.*/sys=Linux/" configure && \
sed -i "s/rel=.*/rel=$KERNEL_VERSION/" configure && \
sed -i "s/cpu=.*/cpu=$TARGET_ARCH/" configure && \
./configure && \
make && \
cd "$CWD" && \
exit 0

cd "$CWD"
exit 1
