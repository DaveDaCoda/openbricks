#!/bin/sh

. config/options


SO=`ls -d $BUILD/zlib*`/libz.so.1
if [ ! -f $SO -o $BUILD/zlib*/libz.a -nt $SO \
     -o $BUILD/MPlayer*/mplayer -nt $SO \
     -o $BUILD/fbi*/fbi -nt $SO ]; then
  $SCRIPTS/libstrip $SO $BUILD/zlib*/libz.a $BUILD/MPlayer*/mplayer
fi
mkdir -p $INSTALL/usr/lib
cp $SO $INSTALL/usr/lib || exit 1
