#!/bin/sh

. config/path

$SCRIPTS/build uClibc || exit 1

CWD=`pwd`
UCBIN=`ls -d $ROOT/$BUILD/uClibc*/build/usr/bin`
UCLIBC_GCC_DLOPT="-Wl,--dynamic-linker,/lib/ld-uClibc.so.0"

cd $BUILD/zlib* && \
CC=$UCBIN/gcc ./configure && \
make CFLAGS="-Os" && \
CC=$UCBIN/gcc ./configure -s && \
make CFLAGS="-Os" && \
cd "$CWD" && \
exit 0

cd "$CWD"
exit 1
