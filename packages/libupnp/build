#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --disable-shared \
            --enable-client \
            --disable-device \
            --disable-webserver \
            --disable-samples \
            --without-docdir \
            --enable-tools
make
make install
