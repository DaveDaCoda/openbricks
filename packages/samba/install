#!/bin/sh

. config/options

SMB=`ls -d $BUILD/samba*/source`
SO=$SMB/libsmbclient.so.0
$SCRIPTS/libstrip $SO $SMB/bin/libsmbclient.a "$SMB/bin/smbmount $SMB/bin/smbmnt $SMB/bin/smbtree"

mkdir -p $INSTALL/usr/lib
cp $SO $INSTALL/usr/lib

mkdir -p $INSTALL/usr/bin
cp $BUILD/samba*/source/bin/smbmount $INSTALL/usr/bin
cp $BUILD/samba*/source/bin/smbmnt $INSTALL/usr/bin
cp $BUILD/samba*/source/bin/smbtree $INSTALL/usr/bin
cp $BUILD/samba*/source/bin/mount.cifs $INSTALL/usr/bin
