#!/bin/sh

. config/path

mkdir -p $INSTALL/usr/lib || exit 1
cp $BUILD/samba-*/source/bin/libsmbclient.so $INSTALL/usr/lib/libsmbclient.so.0 || exit 1

mkdir -p $INSTALL/usr/bin || exit 1
cp $BUILD/samba-*/source/bin/smbmount $INSTALL/usr/bin || exit 1
cp $BUILD/samba-*/source/bin/smbmnt $INSTALL/usr/bin || exit 1
cp $BUILD/samba-*/source/bin/smbtree $INSTALL/usr/bin || exit 1

mkdir -p $INSTALL/etc || exit 1
cp $CONFIG/network $INSTALL/etc || exit 1
