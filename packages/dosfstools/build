#!/bin/sh

. config/path

$SCRIPTS/build uClibc || exit 1

export UCLIBC_GCC_DLOPT="-Wl,--dynamic-linker,/lib/ld-uClibc.so.0"
CWD=`pwd`

cd `ls -d $BUILD/dosfstools*` && \
make -C mkdosfs CC="`ls $ROOT/$BUILD/uClibc*/build/usr/bin/gcc`" CFLAGS="-Os" LDFLAGS="-s" && \
cd "$CWD" && \
exit 0

cd "$CWD"
exit 1
