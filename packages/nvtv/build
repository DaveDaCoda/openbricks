#!/bin/sh

. config/options toolchain

$SCRIPTS/build toolchain || exit 1
$SCRIPTS/build pciutils || exit 1

CWD=`pwd`
LDFLAGS="$LDFLAGS -L`ls -d $ROOT/$BUILD/pciutils*/lib`"

cd $BUILD/nvtv* && \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --without-x \
            --without-gtk \
            --with-wx-config=nowx \
            --without-xbox \
            --without-client-backend && \
make CFLAGS="$CFLAGS -I`ls -d $ROOT/$BUILD/pciutils*/`" && \
cd "$CWD" && \
exit 0

cd "$CWD"
exit 1
