#!/bin/sh

. config/options

$SCRIPTS/build toolchain || exit 1
$SCRIPTS/build pciutils || exit 1

CWD=`pwd`
export CC=$TARGET_CC
export LDFLAGS="-L`ls -d $ROOT/$BUILD/pciutils*/lib`"

cd "`ls -d $BUILD/nvtv*`" && \
./configure --host=$TARGET_NAME \
            --without-x \
            --without-gtk \
            --with-wx-config=nowx \
            --without-xbox \
            --without-client-backend && \
make CFLAGS="-Os -s -I`ls -d $ROOT/$BUILD/pciutils*/`" && \
cd "$CWD" && \
exit 0

cd "$CWD"
exit 1
