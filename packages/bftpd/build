#!/bin/sh

. config/options

$SCRIPTS/build toolchain

CFLAGS="$CFLAGS -D_FILE_OFFSET_BITS=64 -D_LARGEFILE_SOURCE"

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --without-debug \
            --without-pax \
            --without-libz \
            --without-pam
make LDFLAGS="$LDFLAGS"
