#!/bin/sh

. config/options

$SCRIPTS/build toolchain

cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --without-debug \
            --without-pax \
            --without-libz \
            --without-pam
sed "s/CFLAGS=\(.*\)$/CFLAGS=\1 -D_FILE_OFFSET_BITS=64 -D_LARGEFILE_SOURCE/" -i Makefile
make LDFLAGS="$LDFLAGS"
