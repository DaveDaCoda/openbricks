#!/bin/sh

. config/options

$SCRIPTS/build toolchain || exit 1

CWD=`pwd`
export CC=$TARGET_CC 
export CFLAGS="-Os"

cd $BUILD/bftpd* && \
./configure --host=$TARGET_NAME \
            --without-debug \
            --without-pax \
            --without-libz \
            --without-pam && \
make && \
$TARGET_STRIP bftpd && \
cd "$CWD" && \
exit 0

cd "$CWD"
exit 1
