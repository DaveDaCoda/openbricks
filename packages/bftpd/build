#!/bin/sh

. config/options

$SCRIPTS/build toolchain || exit 1

cd $BUILD/bftpd* && \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --without-debug \
            --without-pax \
            --without-libz \
            --without-pam && \
make LDFLAGS="$LDFLAGS" && \
$STRIP bftpd && \
exit 0

exit 1
