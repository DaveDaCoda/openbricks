#!/bin/sh

. config/options toolchain

$SCRIPTS/build toolchain || exit 1

CWD=`pwd`

cd $BUILD/bftpd* && \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --without-debug \
            --without-pax \
            --without-libz \
            --without-pam && \
make && \
$STRIP bftpd && \
cd "$CWD" && \
exit 0

cd "$CWD"
exit 1
