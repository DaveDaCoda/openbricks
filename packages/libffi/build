#!/bin/sh

. config/options

get_meta $1

cd $PKG_BUILD_DIR

mkdir -p objdir-target
cd objdir-target

do_configure \
            --disable-debug \

make
make_install

if [ $TARGET_ARCH = "x86_64" ] ; then
  cp .install/usr/lib64/* .install/usr/lib
  sed -i -e 's%toolexeclibdir=$(libdir)/../lib64%toolexeclibdir=$(libdir)%' .install/usr/lib/pkgconfig/libffi.pc
fi

