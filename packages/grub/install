#!/bin/sh

. config/options

$SCRIPTS/unpack theme-$THEME

FILES="e2fs_stage1_5 fat_stage1_5 stage1 stage2"

mkdir -p $INSTALL/usr/share
tar cj -C $BUILD/grub*/build/lib/grub/i386-pc -f $INSTALL/usr/share/grub-i386-pc.tar.bz2 $FILES

if [ -f "$BUILD/theme-$THEME/grub-splash.xpm.gz" ]; then
  cp $BUILD/theme-$THEME/grub-splash.xpm.gz $INSTALL/usr/share/grub-splash.xpm.gz
fi

mkdir -p $INSTALL/usr/bin
cp $BUILD/grub*/build/sbin/grub $INSTALL/usr/bin
