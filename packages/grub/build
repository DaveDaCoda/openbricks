#!/bin/sh

. config/options

$SCRIPTS/build toolchain || exit 1

unset INSTALL

cd $BUILD/grub* && \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix="`ls -d $ROOT/$BUILD/grub*`/build" \
            --disable-shared \
	    --enable-graphics && \
make && \
make install && \
exit 0

exit 1
