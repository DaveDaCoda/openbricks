#!/bin/sh

. config/options toolchain

$SCRIPTS/build toolchain || exit 1

unset INSTALL
CWD=`pwd`

cd $BUILD/grub* && \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix="`ls -d $ROOT/$BUILD/grub*`/build" \
            --disable-shared \
	    --enable-graphics && \
make && \
make install && \
cd "$CWD" && \
exit 0

cd "$CWD"
exit 1
