#!/bin/sh

. config/options

$SCRIPTS/build toolchain || exit 1

unset INSTALL
CWD=`pwd`
export CC=$TARGET_CC 
export CFLAGS="-Os -s"

cd $BUILD/grub* && \
./configure --host=$TARGET_NAME \
            --prefix="`ls -d $ROOT/$BUILD/grub*`/build" \
            --disable-shared \
	    --enable-graphics && \
make && \
make install && \
cd "$CWD" && \
exit 0

cd "$CWD"
exit 1
