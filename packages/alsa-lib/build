#!/bin/sh

. config/options toolchain

$SCRIPTS/build toolchain || exit 1

CWD=`pwd`

cd $BUILD/alsa-lib* && \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --enable-static \
            --enable-shared \
            --with-debug=no \
            --with-versioned=no \
            --disable-dependency-tracking && \
make -C src CFLAGS="$CFLAGS -fPIC -DPIC" && \
cd "$CWD" && \
exit 0

cd "$CWD"
exit 1
