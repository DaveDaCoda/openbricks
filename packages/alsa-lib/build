#!/bin/sh

. config/options

$SCRIPTS/build toolchain || exit 1

CWD=`pwd`
export CC=$TARGET_CC

cd $BUILD/alsa-lib* && \
./configure --host=$TARGET_NAME \
            --enable-static \
            --enable-shared \
            --with-debug=no \
            --with-versioned=no \
            --disable-dependency-tracking && \
make -C src CFLAGS="-Os -fPIC -DPIC" && \
cd "$CWD" && \
exit 0

cd "$CWD"
exit 1
