#!/bin/sh

. config/path

$SCRIPTS/build alsa-utils || exit 1
$SCRIPTS/build MPlayer || exit 1


mkdir -p $INSTALL/usr/share/alsa
cp "`ls -d $BUILD/alsa-lib-*`/src/conf/alsa.conf" $INSTALL/usr/share/alsa
mkdir -p $INSTALL/usr/lib
$SCRIPTS/libstrip $INSTALL/usr/lib/libasound.so.2 $BUILD/alsa-lib*/src/.libs/libasound.a "$BUILD/alsa-utils*/amixer/amixer $BUILD/MPlayer*/mplayer" "" _snd_pcm_hw_open
