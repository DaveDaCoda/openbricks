#!/bin/sh

. config/options

. $PACKAGES/i18n/config/lang.conf
. $PACKAGES/i18n/scripts/lang.funcs

$SCRIPTS/install iconv-base

MENU_CHARSET=`lang2charset "$LANG"`
SUB_CHARSET=`lang2charset "$SUB_CHARSET"`
[ -z "$SUB_CHARSET" -o -z "$MENU_CHARSET" ] && exit 1

mkdir -p $INSTALL/usr/share/iconv

case "$2" in
  generator)
    mkdir -p $GENERATOR_NAME/i18n/iconv
    cp $BUILD/i18n-iconv/* $GENERATOR_NAME/i18n/iconv/
    ;;

  installator)
    cp $BUILD/i18n-iconv/*.cct $INSTALL/usr/share/iconv/
    cp $BUILD/i18n-iconv/*.so $INSTALL/usr/share/iconv/
    ;;

  *)
    for i in $SUB_CHARSET $MENU_CHARSET; do
      grep "^$i " $BUILD/i18n-iconv/charset.db | cut -d ' ' -f 2 | while read f; do
        cp -f $BUILD/i18n-iconv/$f $INSTALL/usr/share/iconv/
      done
    done
    ;;
esac
