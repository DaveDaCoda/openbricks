#!/bin/sh

. config/options
get_meta $1

# Hack: Avoid OpenGL mis-detection on iMX.6 platforms 
build_uses opengl || OPENGL_CONFIG="-DOPENGL_gl_LIBRARY=0"

cd $PKG_BUILD_DIR
INSTALL_PREFIX=$PWD/.install/usr

mkdir -p .build
cd .build
cmake -DCMAKE_INSTALL_PREFIX=$INSTALL_PREFIX \
      -DCMAKE_FIND_ROOT_PATH=$LIB_PREFIX \
      -DCMAKE_MODULE_PATH=$LIB_PREFIX/lib/kodi \
      $OPENGL_CONFIG \
      -DOVERRIDE_PATHS=1 ..
make
make install
cd ..

strip_libs $INSTALL_PREFIX/lib
