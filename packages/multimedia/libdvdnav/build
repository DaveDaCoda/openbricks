#!/bin/sh

. config/options
get_meta $1

cd $PKG_BUILD_DIR

do_autoconf

local_cflags="-D_XBMC -DHAVE_DVDCSS_DVDCSS_H"

STRIP=$TARGET_STRIP \
PKG_CONFIG_PATH=$LIB_PREFIX/lib/pkgconfig \
CC=$TARGET_CC CFLAGS="$TARGET_CFLAGS $local_cflags" \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=/usr \
            --enable-static \
            --enable-shared \
            --disable-debug

make
make_install
