#!/bin/sh

. config/options
get_meta $1

cd $PKG_BUILD_DIR

do_autoconf

local_cflags=""

STRIP=$TARGET_STRIP \
CC=$TARGET_CC CFLAGS="$TARGET_CFLAGS $local_cflags" \
./configure  --host=$TARGET_NAME \
             --build=$HOST_NAME \
             --prefix=/usr \
             --enable-static \
             --enable-shared \
             --disable-debug

make
make_install
