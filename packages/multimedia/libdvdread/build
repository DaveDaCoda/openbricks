#!/bin/sh

. config/options
get_meta $1

cd $PKG_BUILD_DIR
./configure2 --host=$TARGET_NAME \
             --build=$HOST_NAME \
             --prefix=/usr \
             --enable-static \
             --disable-debug \
             --cc=$CC \

make
make_install

sed -i .install/usr/bin/dvdread-config \
    -e "s%prefix=.*%prefix=$LIB_PREFIX%" \
    -e "s%libdir=.*%libdir=$LIB_PREFIX/lib%"
