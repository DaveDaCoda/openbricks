#!/bin/sh

. config/options

$SCRIPTS/build toolchain || exit 1

CWD=`pwd`
export CC=$TARGET_CC
export CFLAGS="-Os -s" 

cd $BUILD/libexif* && \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --disable-nls && \
make -C libexif && \
cd "$CWD" && \
exit 0

cd "$CWD"
exit 1
