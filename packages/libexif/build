#!/bin/sh

. config/path
. $CONFIG/options

$SCRIPTS/build uClibc || exit 1

export UCLIBC_GCC_DLOPT="-Wl,--dynamic-linker,/lib/ld-uClibc.so.0"
CWD=`pwd`

cd `ls -d $BUILD/libexif*` && \
./configure --disable-nls && \
make CC="$ROOT/$BUILD/uClibc*/build/usr/bin/gcc" CFLAGS="-Os -s" -C libexif && \
cd "$CWD" && \
exit 0

cd "$CWD"
exit 1
