#!/bin/sh

. config/options

$SCRIPTS/build genext2fs

export INSTALL=$BUILD/initrd/mnt

rm -rf $INSTALL
mkdir -p $INSTALL
rm -f $BUILD/initrd/initrd $BUILD/initrd/initrd.gz

mkdir $INSTALL/bin
mkdir $INSTALL/dev
mkdir $INSTALL/dev/snd
mkdir $INSTALL/dev/input
mkdir $INSTALL/etc
mkdir $INSTALL/mnt
mkdir $INSTALL/mnt/ramfs
mkdir $INSTALL/mnt/cdrom
mkdir $INSTALL/proc
mkdir $INSTALL/sbin
mkdir $INSTALL/sys
mkdir $INSTALL/usr
mkdir $INSTALL/usr/bin
mkdir $INSTALL/usr/sbin
mkdir $INSTALL/tmp

$SCRIPTS/install uClibc
$SCRIPTS/install busybox
$SCRIPTS/install iscd
$SCRIPTS/install fixcodec

cp $PACKAGES/initrd/scripts/linuxrc $INSTALL
cp $PACKAGES/initrd/scripts/console $INSTALL/sbin
cp $PACKAGES/initrd/scripts/hotplug $INSTALL/sbin
cp $PACKAGES/initrd/scripts/nosystem $INSTALL/sbin
cp $PACKAGES/initrd/scripts/r[ow] $INSTALL/usr/bin

$BUILD/genext2fs*/genext2fs -d $INSTALL -f $PACKAGES/initrd/config/dev -b $RAMDISK_SIZE -i 512 $BUILD/initrd/initrd

gzip -9 $BUILD/initrd/initrd
