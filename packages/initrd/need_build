#!/bin/sh

. config/options

$SCRIPTS/build uClibc
$SCRIPTS/build busybox
$SCRIPTS/build iscd
$SCRIPTS/build fixcodec

STAMP=$STAMPS/$1/build

for p in uClibc busybox iscd fixcodec; do
  test $STAMPS/$p/build -nt $STAMP && rm -f $STAMP
done

test $PACKAGES/initrd/config/dev -nt $STAMP && rm -f $STAMP

for f in console hotplug linuxrc nosystem ro rw; do
  test $PACKAGES/initrd/scripts/$f -nt $STAMP && rm -f $STAMP
done

exit 0
