#!/bin/sh

. config/options

test "$2" != installator && INSTALL="$INSTALL/boot"
mkdir -p $INSTALL
cp $BUILD/$1/$1.gz $INSTALL

if [ "$2" != generator ]; then
  $SCRIPTS/build bootsplash
  $SCRIPTS/unpack theme-$THEME

  cd $BUILD/theme-$THEME
  $ROOT/$BUILD/bootsplash*/Utilities/splash -s -f bootsplash-800x600.cfg >> $ROOT/$INSTALL/$1.gz
fi

exit 0
