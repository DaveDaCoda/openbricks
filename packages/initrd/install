#!/bin/sh

. config/options

test "$2" != installator && INSTALL="$INSTALL/boot"
mkdir -p $INSTALL
cp $BUILD/initrd/initrd.gz $INSTALL

if [ "$2" != generator ]; then
  $SCRIPTS/build bootsplash
  $SCRIPTS/unpack theme-$THEME

  cd $BUILD/theme-$THEME
  ../bootsplash*/Utilities/splash -s -f bootsplash-800x600.cfg >> $ROOT/$INSTALL/initrd.gz
fi

exit 0
