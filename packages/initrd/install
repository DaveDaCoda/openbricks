#!/bin/sh

. config/options

$SCRIPTS/build bootsplash || exit 1
$SCRIPTS/unpack theme-$THEME || exit 1

test "$2" != installator && INSTALL="$INSTALL/boot"
mkdir -p $INSTALL
cp $BUILD/initrd/initrd.gz $INSTALL

CWD=`pwd`
cd $BUILD/theme-$THEME
../bootsplash*/Utilities/splash -s -f bootsplash-800x600.cfg >> ../../$INSTALL/initrd.gz
cd $CWD
