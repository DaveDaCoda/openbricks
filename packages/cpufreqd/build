#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build cpufrequtils

export ac_cv_func_malloc_0_nonnull=yes

COINFIG_ARCH=
case $TARGET_ARCH in
  i386)
    CONFIG_ARCH="--enable-acpi --disable-pmu"
    ;;
  ppc)
    CONFIG_ARCH="--disable-acpi --enable-pmu"
    ;;
esac


cd $BUILD/$1*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix= \
            --exec-prefix=/usr \
            --disable-static \
            --disable-nforce2 \
            --disable-apm \
            $CONFIG_ARCH
make -C src
