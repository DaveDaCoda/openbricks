#!/bin/sh

. config/options

get_meta $1
cd $PKG_BUILD_DIR

export CFLAGS="$CFLAGS -D_FILE_OFFSET_BITS=32"

make \
  AR="$AR" \
  CC="$CC" \
  CFLAGS="$CFLAGS" \
  LDFLAGS="$LDFLAGS"

mkdir -p .install/usr/bin/
cp polipo .install/usr/bin/

mkdir -p .install/usr/share/polipo/www
cp localindex.html .install/usr/share/polipo/www/index.html

mkdir -p .install/etc/polipo
cp config.sample .install/etc/polipo/config
