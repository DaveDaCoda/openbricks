#!/bin/sh

. config/options

$SCRIPTS/build toolchain || exit 1

unset INSTALL

cd $BUILD/libirman* && \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --sysconfdir=/etc && \
make && \
mkdir -p $LIB_PREFIX/lib $LIB_PREFIX/include && \
cp irman.h $LIB_PREFIX/include && \
cp libirman.a $LIB_PREFIX/lib && \
exit 0

exit 1
