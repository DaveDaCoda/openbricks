#!/bin/sh

. config/path
. $CONFIG/options

$SCRIPTS/build uClibc || exit 1

unset UCLIBC_GCC_DLOPT
CWD=`pwd`

cd `ls -d $BUILD/libungif*` && \
./configure --without-x CC="$ROOT/$BUILD/uClibc*/build/usr/bin/gcc" CFLAGS="-Os -s" && \
export UCLIBC_GCC_DLOPT="-Wl,--dynamic-linker,/lib/ld-uClibc.so.0" && \
make -C lib && \
cd "$CWD" && \
exit 0

cd "$CWD"
exit 1
