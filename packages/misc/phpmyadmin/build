#!/bin/sh

. config/options

get_meta $1
cd $PKG_BUILD_DIR

mkdir -p config
sed config.sample.inc.php > config/config.inc.php \
  -e "s/'localhost'/'127.0.0.1'/"
chmod o+rw config
chmod o+w config/config.inc.php

rm -rf .install
mkdir -p .install/srv/www/htdocs/phpmyadmin
for f in * ; do 
  cp -r $f .install/srv/www/htdocs/phpmyadmin
done

cp $ROOT/$PACKAGES/$PKG_SECTION/$1/www/* .install/srv/www/htdocs
