#!/bin/sh

. config/path

$SCRIPTS/build uClibc || exit 1
$SCRIPTS/build linux || exit 1

export UCLIBC_GCC_DLOPT="-Wl,--dynamic-linker,/lib/ld-uClibc.so.0"
CWD=`pwd`

cd "`ls -d $ROOT/$BUILD/wireless_tools*`" && \
make iwconfig PREFIX=/usr KERNEL_SRC="`ls -d $ROOT/$BUILD/linux*`" CC="`ls $ROOT/$BUILD/uClibc*/build/usr/bin/gcc`" CFLAGS="-Os" LDFLAGS="-s" && \
cd "$CWD" && \
exit 0

cd "$CWD"
exit 1
