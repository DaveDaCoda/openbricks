#!/bin/sh

. config/options

$SCRIPTS/build toolchain
$SCRIPTS/build libirman

export ac_cv_path_LIBUSB_CONFIG=
export ac_cv_header_alsa_asoundlib_h=no

cd $BUILD/lirc*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --disable-shared \
            --without-x \
            --with-driver=any \
            --with-port=0x3f8 \
            --with-irq=4 \
            --with-kerneldir=$(kernel_path)
make
make -C tools install
