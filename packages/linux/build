#!/bin/sh

. config/path

LINUX="`ls -d $ROOT/$BUILD/linux*`"

make clean -C "$LINUX" && \
make bzImage -C "$LINUX" && \
make modules -C "$LINUX" && \
make INSTALL_MOD_PATH="$LINUX/modules" modules_install -C "$LINUX" && \
rm -f $LINUX/modules/lib/modules/*/build && \
rm -f $LINUX/modules/lib/modules/*/source && \
exit 0

exit 1
