#!/bin/sh

. config/path

case "$2" in
  image)
    test "$3" != installator && INSTALL="$INSTALL/boot"
    mkdir -p $INSTALL
    cp $BUILD/linux-*/arch/i386/boot/bzImage $INSTALL/vmlinuz
    ;;

  modules)
    cp -r $BUILD/linux-*/modules/* $INSTALL
    rm -rf $INSTALL/lib/modules/*/kernel/drivers/media/video/v4l1-compat.o
    mkdir -p $INSTALL/etc
    cp $PACKAGES/linux/modules $INSTALL/etc
    cp $CONFIG/tvcard $INSTALL/etc
    ;;
esac
