#!/bin/sh

. config/options

case "$2" in
  image)
    test "$3" != installator && INSTALL="$INSTALL/boot"
    mkdir -p $INSTALL
    case $TARGET_ARCH in
      i386)
        cp $BUILD/$1*/arch/$TARGET_ARCH/boot/bzImage $INSTALL/vmlinuz
        ;;
    esac
    ;;

  modules)
    cp -r $BUILD/linux*/modules/* $INSTALL
    rm -f $INSTALL/lib/modules/*/kernel/drivers/media/video/cx88/cx8802.ko
    rm -f $INSTALL/lib/modules/*/kernel/drivers/media/video/cx88/cx88-blackbird.ko
    mkdir -p $INSTALL/etc
    cp $PACKAGES/linux/config/modules $INSTALL/etc
    cp $PACKAGES/linux/config/tvcard $INSTALL/etc
    ;;
esac
