#!/bin/sh

. config/options

$SCRIPTS/install make

LINUX="`ls -d $BUILD/linux*`"

sed "s/CONFIG_BLK_DEV_RAM_SIZE=.*/CONFIG_BLK_DEV_RAM_SIZE=$RAMDISK_SIZE/" $PACKAGES/linux/config/linux.conf > $LINUX/.config

yes "" | make config ARCH=$TARGET_ARCH -C $LINUX

make prepare0 ARCH=$TARGET_ARCH -C $LINUX
