#!/bin/sh

. config/options

make -C $BUILD/bootsplash*/Utilities splash CC=$HOST_CC || exit 1

make -C $BUILD/bootsplash*/Utilities fbtruetype CC=$TARGET_CC CFLAGS="-Os -I`ls -d $ROOT/$BUILD/freetype*/build/include` -I`ls -d $ROOT/$BUILD/freetype*/build/include/freetype2`" LDFLAGS="-L`ls -d $ROOT/$BUILD/freetype*/build/lib`" || exit 1

exit 0
