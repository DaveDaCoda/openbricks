#!/bin/sh

. config/path

UCBIN=`ls -d $ROOT/$BUILD/uClibc*/build/usr/bin`

make -C $BUILD/bootsplash*/Utilities splash || exit 1

export UCLIBC_GCC_DLOPT="-Wl,--dynamic-linker,/lib/ld-uClibc.so.0"
make -C $BUILD/bootsplash*/Utilities fbtruetype CC=$UCBIN/gcc CFLAGS="-Os -I`ls -d $ROOT/$BUILD/freetype*/build/include` -I`ls -d $ROOT/$BUILD/freetype*/build/include/freetype2`" LDFLAGS="-L`ls -d $ROOT/$BUILD/freetype*/build/lib`" || exit 1

exit 0
