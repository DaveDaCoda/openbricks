#!/bin/sh

. config/options toolchain

$SCRIPTS/build toolchain || exit 1

CWD=`pwd`

cd $BUILD/cdparanoia* && \
CC=$HOST_CC \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME && \
make lib CC=$CC OPT="$CFLAGS -ffast-math" && \
cp interface/cdda_interface.h interface/libcdda_interface.a paranoia && \
cd "$CWD" && \
exit 0

cd "$CWD"
exit 1
