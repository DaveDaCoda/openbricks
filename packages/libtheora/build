#!/bin/sh

. config/options

$SCRIPTS/build toolchain || exit 1
$SCRIPTS/build libogg || exit 1

unset INSTALL
CWD=`pwd`

cd $BUILD/libtheora* && \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --disable-shared \
            --disable-oggtest && \
make && \
make install && \
cd "$CWD" && \
exit 0

cd "$CWD"
exit 1
