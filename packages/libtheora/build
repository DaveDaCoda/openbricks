#!/bin/sh

. config/options

$SCRIPTS/build toolchain || exit 1
$SCRIPTS/build libogg || exit 1

CWD=`pwd`
export CC=$TARGET_CC
export CFLAGS="-Os"

cd $BUILD/libtheora* && \
./configure --host=$TARGET_NAME \
            --disable-shared \
            --with-ogg-libraries=`ls -d $ROOT/$BUILD/libogg*/src/.libs` \
            --with-ogg-includes=`ls -d $ROOT/$BUILD/libogg*/include` \
            --disable-oggtest && \
cd lib && \
make && \
cd "$CWD" && \
exit 0

cd "$CWD"
exit 1
