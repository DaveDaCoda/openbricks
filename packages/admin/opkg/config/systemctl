#!/bin/sh

if [ "$1" = "restart" ]; then
  echo "echo 'Restarting $2 ...';systemctl $@" >> $OPKG_INTERCEPT_DIR/systemctl
  sort -u $OPKG_INTERCEPT_DIR/systemctl > $OPKG_INTERCEPT_DIR/systemctl.tmp
  mv $OPKG_INTERCEPT_DIR/systemctl.tmp $OPKG_INTERCEPT_DIR/systemctl
  chmod +x $OPKG_INTERCEPT_DIR/systemctl
  exit 0
fi

/bin/systemctl $*
