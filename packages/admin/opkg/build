#!/bin/sh

. config/options

get_meta $1

cd $PKG_BUILD_DIR

export LDFLAGS="--static"
export CFLAGS="--static"

export LIBS="-l:libarchive.a -l:libcurl.a -lrtmp -l:libdl.a -lssl -lcrypto -l:libdl.a -lz"

export LIBARCHIVE_LIBS="-l:libarchive.a"
export CURL_LIBS="-l:libcurl.a -l:libdl.a -lrtmp"

do_autoconf
do_configure \
            --prefix=/usr \
            --disable-dependency-tracking \
            --enable-static \
            --disable-shared \
            --enable-curl \
            --disable-ssl-curl \
            --enable-sha256 \
            --disable-pathfinder \
            --disable-openssl \
            --disable-gpg \
            --with-opkglibdir=/var/lib \
            --with-opkgetcdir=/etc \
            --with-static-libopkg

make V=1
make_install
