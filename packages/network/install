#!/bin/sh

. config/options

mkdir -p $INSTALL/etc
cp $PACKAGES/network/config/network $INSTALL/etc
cp $PACKAGES/network/config/nfs $INSTALL/etc
cp $CONFIG/issue $INSTALL/etc
$SCRIPTS/install bftpd
$SCRIPTS/install samba

if [ "$WIFI" = yes ]; then
  $SCRIPTS/install wireless_tools
  $SCRIPTS/install rt2400
  $SCRIPTS/install RT2500
fi
