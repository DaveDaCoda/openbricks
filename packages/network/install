#!/bin/sh

. config/path
. $CONFIG/options

mkdir -p $INSTALL/etc || exit 1
cp $PACKAGES/network/network $INSTALL/etc || exit 1
cp $PACKAGES/network/nfs $INSTALL/etc || exit 1
cp $CONFIG/issue $INSTALL/etc || exit 1
$SCRIPTS/install bftpd || exit 1
$SCRIPTS/install samba || exit 1

if [ "$WIFI" = yes ]; then
  $SCRIPTS/install wireless_tools || exit 1;
  $SCRIPTS/install at76c503 || exit 1;
  $SCRIPTS/install rt2400 || exit 1;
fi

exit 0
