#!/bin/sh

. config/options

mkdir -p $INSTALL/etc
cp $PACKAGES/i18n/scripts/lang.funcs $INSTALL/etc

case "$2" in
  generator)
    mkdir -p $GENERATOR_NAME/i18n
    cp $PACKAGES/i18n/config/lang.conf $GENERATOR_NAME/i18n
    cp $PACKAGES/i18n/scripts/lang.funcs $GENERATOR_NAME/i18n
    ;;

  *)
    cp $PACKAGES/i18n/config/lang.conf $INSTALL/etc
    ;;
esac
