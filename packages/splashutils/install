#!/bin/sh

. config/options

$SCRIPTS/unpack theme-$THEME || exit 1

mkdir -p $INSTALL/sbin
mkdir -p $INSTALL/etc/splash/default

cp $BUILD/splashutils*/splash_helper $INSTALL/sbin/
cp $BUILD/splashutils*/splash_util $INSTALL/sbin/
cp $BUILD/theme-$THEME/*.cfg \
   $BUILD/theme-$THEME/*.jpeg \
   $BUILD/theme-$THEME/*.ttf \
  $INSTALL/etc/splash/default/

$SCRIPTS/install miscsplashutils || exit 1
