#!/bin/sh

. config/options

$SCRIPTS/build toolchain || exit 1
$SCRIPTS/build linux || exit 1
$SCRIPTS/build jpeg || exit 1
$SCRIPTS/build libpng || exit 1
$SCRIPTS/build zlib || exit 1

CWD=`pwd`
OPTIONS="CC=$TARGET_CC LD=$TARGET_LD ARCH=$TARGET_ARCH"
FLAGS="JPEGSRC=`ls -d $ROOT/$BUILD/jpeg*` LPNGSRC=`ls -d $ROOT/$BUILD/libpng*` ZLIBSRC=`ls -d $ROOT/$BUILD/zlib*`"

cd $BUILD/splashutils* && \
make $OPTIONS splash_kern && \
make $OPTIONS $FLAGS splash_user && \
cd "$CWD" && \
exit 0

cd "$CWD"
exit 1
