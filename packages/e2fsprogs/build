#!/bin/sh

. config/options

$SCRIPTS/build toolchain || exit 1

CWD=`pwd`

cd $BUILD/e2fsprogs* && \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --disable-shared \
            --disable-resizer \
            --disable-imager \
            --disable-debugfs \
            --disable-swapfs && \
make libs && \
make mke2fs -C misc && \
$STRIP misc/mke2fs && \
cd "$CWD" && \
exit 0

cd "$CWD"
exit 1
