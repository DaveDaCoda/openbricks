#!/bin/sh

. config/options

$SCRIPTS/build toolchain || exit 1

unset INSTALL
CWD=`pwd`
export CC=$TARGET_CC 
export CFLAGS="-Os"

cd $BUILD/e2fsprogs* && \
./configure --host=$TARGET_NAME \
            --disable-shared \
            --disable-resizer \
            --disable-imager \
            --disable-debugfs \
            --disable-swapfs && \
make && \
$TARGET_STRIP misc/mke2fs && \
cd "$CWD" && \
exit 0

cd "$CWD"
exit 1
