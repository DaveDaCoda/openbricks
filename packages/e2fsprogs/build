#!/bin/sh

. config/options

$SCRIPTS/build toolchain

export BUILD_CC=$HOST_CC

cd $BUILD/e2fsprogs*
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --with-ldopts="$LDFLAGS" \
            --disable-shared \
            --disable-resizer \
            --disable-imager \
            --disable-debugfs \
            --disable-swapfs
make subst -C util CPPFLAGS="$HOST_CPPFLAGS" CFLAGS="$HOST_CFLAGS" LDFLAGS="$HOST_LDFLAGS"
make libs
make mke2fs -C misc
