#!/bin/sh

. config/path

case "$2" in
  binary)
    mkdir -p $INSTALL/usr/bin
    mkdir -p $INSTALL/boot
    cp $BUILD/syslinux-*/syslinux $INSTALL/usr/bin
    cp $BUILD/syslinux-*/ldlinux.sys $INSTALL/boot
    ;;

  installator)
    cp $BUILD/syslinux-*/mbr.bin $INSTALLATOR_NAME
    cp $PACKAGES/syslinux/syslinux.cfg $INSTALL
    sed -i 's/boot=cdrom/boot=hdd/' $INSTALL/syslinux.cfg
    ;;

  *)
    mkdir -p $INSTALL/boot
    cp $BUILD/syslinux-*/isolinux.bin $INSTALL/boot
    cp $PACKAGES/syslinux/syslinux.cfg $INSTALL/boot/isolinux.cfg
    ;;
esac
