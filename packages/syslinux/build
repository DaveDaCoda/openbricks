#!/bin/sh

. config/path

$SCRIPTS/build uClibc || exit 1

export UCLIBC_GCC_DLOPT="-Wl,--dynamic-linker,/lib/ld-uClibc.so.0"
CWD=`pwd`

cd `ls -d $BUILD/syslinux*` && \
make ldlinux.sys pxelinux.0 mbr.bin isolinux.bin syslinux CC="`ls $ROOT/$BUILD/uClibc*/build/usr/bin/gcc`" CFLAGS="-Os -fomit-frame-pointer -D_FILE_OFFSET_BITS=64" LDFLAGS="-Os -s" && \
cd "$CWD" && \
exit 0

cd "$CWD"
exit 1
