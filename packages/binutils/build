#!/bin/sh

. config/options

$SCRIPTS/install ccache || exit 1

CWD=`pwd`
unset INSTALL
export CC=$HOST_CC
export CFLAGS="-O2"
export LDFLAGS="-s"

cd $BUILD/binutils* && \
./configure --target=$TARGET_NAME-uclibc \
            --prefix=$ROOT/$TOOLCHAIN \
            --disable-nls && \
make && \
cd $CWD && \
exit 0

cd $CWD
exit 1
