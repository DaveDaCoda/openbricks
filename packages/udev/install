#!/bin/sh

. config/options

mkdir -p $INSTALL/sbin
cp $BUILD/udev*/udev $INSTALL/sbin
cp $BUILD/udev*/udevd $INSTALL/sbin
cp $BUILD/udev*/udevsend $INSTALL/sbin
cp $BUILD/udev*/udevstart $INSTALL/sbin

mkdir -p $INSTALL/etc/udev/rules.d
cp $PACKAGES/udev/config/udev.conf $INSTALL/etc/udev
cp $PACKAGES/udev/config/rules.d/* $INSTALL/etc/udev/rules.d

mkdir -p $INSTALL/etc/udev/scripts
cp $PACKAGES/udev/scripts/* $INSTALL/etc/udev/scripts
