#!/bin/sh

. config/options toolchain

$SCRIPTS/build toolchain || exit 1

unset INSTALL
CWD=`pwd`

cd $BUILD/fribidi* && \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix="`ls -d $ROOT/$BUILD/fribidi*`/build" \
            --disable-shared && \
make && \
chmod +x fribidi-config && \
make install && \
cd "$CWD" && \
exit 0

cd "$CWD"
exit 1
