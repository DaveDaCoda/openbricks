#!/bin/sh

. config/options

mkdir -p $INSTALL/usr/bin
cp $BUILD/dvb-apps*/util/scan/dvbscan $INSTALL/usr/bin

# Add DVB Terrestrial transponders frequencies
mkdir -p $INSTALL/usr/share/dvb/dvb-t
for i in `ls $BUILD/dvb-apps*/util/scan/dvb-t/ | grep -v CVS | sed 's/\([a-z][a-z]\)-.*/\1/'`; do mkdir -p $INSTALL/usr/share/dvb/dvb-t/$i; done
for i in `ls $BUILD/dvb-apps/util/scan/dvb-t/*-*`; do tmpdir=`echo $i | sed "s%.*/dvb-t/\([a-z][a-z]\)-.*%\1%"` && file=`echo $i | sed "s%.*/dvb-t/[a-z][a-z]-\(.*\)%\1%"` && cp $i "$INSTALL/usr/share/dvb/dvb-t/$tmpdir/$file"; done

# Build DVB transponders frequencies archive
tar cf - -C $INSTALL/usr/share/ dvb | lzma e $INSTALL/usr/share/dvb.tar.lzma -si -a2
rm -rf $INSTALL/usr/share/dvb
