#!/bin/sh

. config/options

mkdir -p $INSTALL/etc/mplayer
mkdir -p $INSTALL/usr/share/mplayer

case "$2" in
  generator)
    mkdir -p $GENERATOR_NAME/i18n/texts
    cp $PACKAGES/i18n-texts/config/help_*.txt $GENERATOR_NAME/i18n/texts/
    cp $PACKAGES/i18n-texts/config/menu_*.conf $GENERATOR_NAME/i18n/texts/
    ;;

  installator)
    cp $PACKAGES/i18n-texts/config/help_*.txt $INSTALL/usr/share/mplayer
    cp $PACKAGES/i18n-texts/config/menu_*.conf $INSTALL/etc/mplayer
    ;;

  *)
    cp $PACKAGES/i18n-texts/config/help_$LANG.txt $INSTALL/usr/share/mplayer/
    cp $PACKAGES/i18n-texts/config/menu_$LANG.conf $INSTALL/etc/mplayer/
    ;;
esac
