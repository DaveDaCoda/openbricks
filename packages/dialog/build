#!/bin/sh

. config/path

$SCRIPTS/build uClibc || exit 1
$SCRIPTS/build ncurses || exit 1

export UCLIBC_GCC_DLOPT="-Wl,--dynamic-linker,/lib/ld-uClibc.so.0"
CWD=`pwd`

cd `ls -d $BUILD/dialog*` && \
./configure --disable-nls --without-dbmalloc --without-dmalloc --with-ncurses --with-curses-dir=`ls -d $ROOT/$BUILD/ncurses*` --disable-rc-file --disable-Xdialog --disable-gauge --disable-tailbox && \
make CC="`ls $ROOT/$BUILD/uClibc*/build/usr/bin/gcc`" CFLAGS="-Os" LDFLAGS="-lm -s" && \
cd "$CWD" && \
exit 0

cd "$CWD"
exit 1
