#!/bin/sh

. config/options

$SCRIPTS/build toolchain || exit 1
$SCRIPTS/build ncurses || exit 1

cd $BUILD/dialog* && \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --disable-nls \
            --without-dbmalloc \
            --without-dmalloc \
            --with-ncurses \
            --disable-rc-file \
            --disable-Xdialog \
            --disable-form \
            --disable-gauge \
            --disable-tailbox && \
make && \
exit 0

exit 1
