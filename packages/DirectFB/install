#!/bin/sh

. config/path

$SCRIPTS/build uClibc || exit 1
$SCRIPTS/build linux || exit 1

mkdir -p $INSTALL/usr/lib/directfb
cp `ls -d $BUILD/DirectFB*/.libs/*.so` $INSTALL/usr/lib/directfb || exit 1

mkdir -p $INSTALL/usr/lib/directfb/gfxdrivers
find `ls -d $BUILD/DirectFB*/gfxdrivers` -name '*\.so' -exec cp {} $INSTALL/usr/lib/directfb/gfxdrivers \; || exit 1
