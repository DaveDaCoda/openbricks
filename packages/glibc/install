#!/bin/sh

. config/options


if [ "$2" = toolchain ]; then

  rm -rf "$SYSROOT_PREFIX/lib" "$SYSROOT_PREFIX/usr/lib" "$SYSROOT_PREFIX/usr/include"
  $SCRIPTS/install linux-headers

  cd $BUILD/$1*/objdir-$1
  cat >configparms <<EOF
install_root=$SYSROOT_PREFIX
EOF
  make install
  exit 0
fi

exit 0
