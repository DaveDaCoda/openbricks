#!/bin/sh

. config/path

$SCRIPTS/build uClibc || exit 1
$SCRIPTS/build freetype || exit 1

UCBIN=`ls -d $ROOT/$BUILD/uClibc*/build/usr/bin`

export UCLIBC_GCC_DLOPT="-Wl,--dynamic-linker,/lib/ld-uClibc.so.0"

make -C $BUILD/miscsplashutils*/fbtruetype/ CC=$UCBIN/gcc CFLAGS="-Os -I`ls -d $ROOT/$BUILD/freetype*/build/include` -I`ls -d $ROOT/$BUILD/freetype*/build/include/freetype2`" LDFLAGS="-L`ls -d $ROOT/$BUILD/freetype*/build/lib` -L`ls -d $ROOT/$BUILD/zlib*/` -L`ls -d $ROOT/$BUILD/uClibc*/build/lib`" LIBSS="-lfreetype -lz -lm" || exit 1

exit 0
