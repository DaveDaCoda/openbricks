#!/bin/sh

. config/options

$SCRIPTS/build toolchain || exit 1
$SCRIPTS/build freetype || exit 1
$SCRIPTS/build zlib || exit 1

make -C $BUILD/miscsplashutils*/fbtruetype CC=$TARGET_CC CFLAGS="-Os -I`ls -d $ROOT/$BUILD/freetype*/build/include` -I`ls -d $ROOT/$BUILD/freetype*/build/include/freetype2`" LDFLAGS="-L`ls -d $ROOT/$BUILD/freetype*/build/lib` -L`ls -d $ROOT/$BUILD/zlib*`" LIBSS="-lfreetype -lz -lm" || exit 1

exit 0
