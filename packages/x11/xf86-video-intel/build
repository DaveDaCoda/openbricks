#!/bin/sh

. config/options

get_meta $1

cd $PKG_BUILD_DIR

xorg_drv_configure_prepend

do_autoconf
do_configure \
            --enable-dri \
            --enable-kms \
            --disable-xvmc \
            --disable-sna \
            --disable-debug \
            --with-xorg-module-dir=$XORG_PATH_MODULES \
            --disable-dri3
# sna disable : error with GCC :
# error: inlining failed in call to always_inline '_mm_load_si128.isra.0'
            
export MAKEFLAGS=-j1
make V=1
make_install
