#!/bin/sh

. config/options

if [ "$2" = toolchain ]; then
  make -C $BUILD/uClibc* PREFIX="$SYSROOT_PREFIX" install
  exit 0
fi

mkdir -p $INSTALL/lib

cp $BUILD/uClibc*/lib/ld-uClibc.so.0 $INSTALL/lib
cp $BUILD/uClibc*/lib/libc.so.0 $INSTALL/lib
cp $BUILD/uClibc*/lib/libdl.so.0 $INSTALL/lib
cp $BUILD/uClibc*/lib/libpthread.so.0 $INSTALL/lib
cp $BUILD/uClibc*/lib/libm.so.0 $INSTALL/lib
cp $BUILD/uClibc*/lib/libutil.so.0 $INSTALL/lib
[ "$NETWORK" = yes ] && cp $BUILD/uClibc*/lib/libcrypt.so.0 $INSTALL/lib

exit 0
