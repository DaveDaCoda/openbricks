#!/bin/sh

. config/options

$SCRIPTS/unpack linux

UCLIBC=`ls -d $BUILD/uClibc*`

sed -e "s%^KERNEL_SOURCE=.*%KERNEL_SOURCE=\"$KERNEL\"%" \
    $PACKAGES/uClibc/config/uClibc.conf > $UCLIBC/.config

tar xjf $SOURCES/uClibc/locale-uClibc*.tar.bz2 -C $UCLIBC/extra/locale

yes '' | make -C $UCLIBC oldconfig
make -C $UCLIBC pregen
make -C $UCLIBC/extra/locale pregen
make -C $UCLIBC PREFIX="$SYSROOT_PREFIX" install_dev
