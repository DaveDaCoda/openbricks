#!/bin/sh

. config/options

$SCRIPTS/unpack linux || exit 1

UCLIBC=`ls -d $BUILD/uClibc*`

sed -e "s%^KERNEL_SOURCE=.*%KERNEL_SOURCE=\"$KERNEL\"%" \
    -e "s%^RUNTIME_PREFIX=.*%RUNTIME_PREFIX=\"$SYSROOT_PREFIX\"%" \
    -e "s%^DEVEL_PREFIX=.*%DEVEL_PREFIX=\"$SYSROOT_PREFIX/usr\"%" \
    $PACKAGES/uClibc/uClibc.conf > $UCLIBC/.config

tar xjf $SOURCES/uClibc/locale-uClibc*.tar.bz2 -C $UCLIBC/extra/locale

yes '' | make -C $UCLIBC oldconfig
make -C $UCLIBC pregen
make -C $UCLIBC install_dev
