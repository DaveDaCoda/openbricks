#!/bin/sh

. config/options

$SCRIPTS/build toolchain || exit 1

unset INSTALL
CWD=`pwd`

cd $BUILD/freetype* && \
./configure \
            --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix="`ls -d $ROOT/$BUILD/freetype*`/build" \
            --disable-shared && \
make && \
chmod +x builds/unix/freetype-config && \
make install && \
cd "$CWD" && \
exit 0

cd "$CWD"
exit 1
