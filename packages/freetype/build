#!/bin/sh

. config/path

$SCRIPTS/build uClibc || exit 1

unset INSTALL
UCBIN=`ls -d $ROOT/$BUILD/uClibc*/build/usr/bin`
export UCLIBC_GCC_DLOPT="-Wl,--dynamic-linker,/lib/ld-uClibc.so.0"
CWD=`pwd`

cd $BUILD/freetype* && \
CC=$UCBIN/gcc ./configure --host=i386-linux-gnu --prefix="`ls -d $ROOT/$BUILD/freetype*`/build" && \
make CC=$UCBIN/gcc CFLAGS="-c -Os" && \
chmod +x builds/unix/freetype-config && \
make install && \
cd "$CWD" && \
exit 0

cd "$CWD"
exit 1
