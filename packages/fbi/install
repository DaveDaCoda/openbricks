#!/bin/sh

. config/path
. $CONFIG/options

mkdir -p $INSTALL/usr/bin || exit 1
cp $BUILD/fbi*/fbi $INSTALL/usr/bin || exit 1
cp $PACKAGES/fbi/fbi_wrapper $INSTALL/usr/bin || exit 1
cp $PACKAGES/fbi/view_img $INSTALL/usr/bin || exit 1

mkdir -p $INSTALL/usr/lib/kbd/consolefonts || exit 1
cp $SOURCES/fbi/lat1-16.psf $INSTALL/usr/lib/kbd/consolefonts || exit 1

mkdir -p $INSTALL/etc || exit 1
cp $CONFIG/img_ext $INSTALL/etc || exit 1
echo $VIEW_IMG_TIMEOUT > $INSTALL/etc/view_img_timeout || exit 1

exit 0
