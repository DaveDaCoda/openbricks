#!/bin/sh

. config/options

mkdir -p $INSTALL/usr/bin
cp $BUILD/fbi*/fbi $INSTALL/usr/bin
cp $PACKAGES/fbi/scripts/fbi_wrapper $INSTALL/usr/bin
cp $PACKAGES/fbi/scripts/view_img $INSTALL/usr/bin

mkdir -p $INSTALL/usr/lib/kbd/consolefonts
$SCRIPTS/extract fbi "*.psf" $INSTALL/usr/lib/kbd/consolefonts

mkdir -p $INSTALL/etc
cp $CONFIG/img_ext $INSTALL/etc
echo $VIEW_IMG_TIMEOUT > $INSTALL/etc/view_img_timeout
