#!/bin/sh

. config/options

mkdir -p $INSTALL/usr/bin
cp $BUILD/fbi*/fbi $INSTALL/usr/bin
cp $PACKAGES/fbi/fbi_wrapper $INSTALL/usr/bin
cp $PACKAGES/fbi/view_img $INSTALL/usr/bin

mkdir -p $INSTALL/usr/lib/kbd/consolefonts
cp $SOURCES/fbi/lat1-16.psf $INSTALL/usr/lib/kbd/consolefonts

mkdir -p $INSTALL/etc
cp $CONFIG/img_ext $INSTALL/etc
echo $VIEW_IMG_TIMEOUT > $INSTALL/etc/view_img_timeout
