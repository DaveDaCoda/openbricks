#!/bin/sh

. config/options toolchain

$SCRIPTS/build toolchain || exit 1
$SCRIPTS/build zlib || exit 1

CWD=`pwd`

CFLAGS="$CFLAGS -I`ls -d $ROOT/$BUILD/zlib*/`"
LDFLAGS="$LDFLAGS -L`ls -d $ROOT/$BUILD/zlib*/`"

cd $BUILD/libpng* && \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --without-x && \
make && \
cd "$CWD" && \
exit 0

cd "$CWD"
exit 1
