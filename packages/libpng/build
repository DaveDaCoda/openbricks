#!/bin/sh

. config/path
. $CONFIG/options

$SCRIPTS/build uClibc || exit 1
$SCRIPTS/build zlib || exit 1

export UCLIBC_GCC_DLOPT="-Wl,--dynamic-linker,/lib/ld-uClibc.so.0"
CWD=`pwd`

cd `ls -d $BUILD/libpng*` && \
make -f scripts/makefile.linux CC="`ls -d $ROOT/$BUILD/uClibc*/build/usr/bin/gcc`" CFLAGS="-Os -s -I`ls -d $ROOT/$BUILD/zlib*/`" libpng.a && \
cd "$CWD" && \
exit 0

cd "$CWD"
exit 1
