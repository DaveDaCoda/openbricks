#!/bin/sh

. config/options

$SCRIPTS/build toolchain || exit 1
$SCRIPTS/build zlib || exit 1

unset INSTALL

cd $BUILD/libpng* && \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --prefix=$LIB_PREFIX \
            --without-x && \
make && \
make install && \
exit 0

exit 1
