#!/bin/sh

. config/path

$SCRIPTS/build uClibc || exit 1


export UCLIBC_GCC_DLOPT="-Wl,--dynamic-linker,/lib/ld-uClibc.so.0"
CWD=`pwd`

KERNEL="`ls -d $ROOT/$BUILD/linux*/include`"

cd "`ls -d $BUILD/autoplay*`" && \
make CC="`ls $ROOT/$BUILD/uClibc*/build/usr/bin/gcc`" CFLAGS="-Os -s -I$KERNEL" && \
cd "$CWD" && \
exit 0

cd "$CWD"
exit 1
