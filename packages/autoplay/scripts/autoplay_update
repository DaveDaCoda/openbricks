#!/bin/sh

if [ ! -e /var/autoplay_state ]; then
  # Setup and start autoplay daemon.
  cp /etc/autoplay.conf /var/autoplay_state
  /usr/bin/autoplay 8 > /var/mp_control &
elif [ `cat /var/autoplay_state` == off ]; then
  echo -n "on" > /var/autoplay_state
else
  echo -n "off" > /var/autoplay_state
fi
