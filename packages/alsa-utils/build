#!/bin/sh

. config/options toolchain

$SCRIPTS/build toolchain || exit 1
$SCRIPTS/build alsa-lib || exit 1

CWD=`pwd`
ALSA_LIB="`ls -d $ROOT/$BUILD/alsa-lib*`"

cd $BUILD/alsa-utils* && \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --disable-dependency-tracking \
            --disable-alsamixer \
            --with-alsa-prefix="$ALSA_LIB/src/.libs" \
            --with-alsa-inc-prefix="$ALSA_LIB/include" && \
make -C amixer && \
cd "$CWD" && \
exit 0

cd "$CWD"
exit 1
