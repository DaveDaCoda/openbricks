#!/bin/sh

. config/options

$SCRIPTS/build toolchain || exit 1
$SCRIPTS/build alsa-lib || exit 1

CWD=`pwd`

cd $BUILD/alsa-utils* && \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --disable-dependency-tracking \
            --disable-alsamixer && \
make -C amixer && \
cd "$CWD" && \
exit 0

cd "$CWD"
exit 1
