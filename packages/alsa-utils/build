#!/bin/sh

. config/options

$SCRIPTS/build toolchain || exit 1
$SCRIPTS/build alsa-lib || exit 1

cd $BUILD/alsa-utils* && \
./configure --host=$TARGET_NAME \
            --build=$HOST_NAME \
            --disable-dependency-tracking \
            --disable-alsamixer && \
make -C amixer && \
exit 0

exit 1
